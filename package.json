{
  "name": "tiged",
  "version": "2.12.7",
  "engines": {
    "node": ">=18.0.0"
  },
  "description": "Straightforward project scaffolding",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "module-sync": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "module": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "bin": {
    "degit": "dist/bin.cjs",
    "tiged": "dist/bin.js"
  },
  "scripts": {
    "lint": "eslint --config=eslint.config.mjs --color .",
    "lint:fix": "eslint --config=eslint.config.mjs --color . --fix",
    "erase-ts-config-paths": "tsx scripts/eraseTSConfigPaths.mts",
    "format": "prettier --config=prettier.config.mjs --write .",
    "format:check": "prettier --config=prettier.config.mjs --check .",
    "clean": "tsx scripts/remove.mts",
    "build": "npm run clean && tsup --config=tsup.config.ts",
    "test": "vitest --config=vitest.config.mts",
    "test-types": "tsc -p tsconfig.json --noEmit",
    "prepack": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tiged/tiged.git"
  },
  "keywords": [
    "scaffolding",
    "template",
    "git"
  ],
  "author": "tiged",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tiged/tiged/issues"
  },
  "homepage": "https://github.com/tiged/tiged#readme",
  "dependencies": {
    "picocolors": "^1.1.1",
    "tinyglobby": "^0.2.15",
    "undici": "^7.21.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.3",
    "@vitest/eslint-plugin": "^1.6.7",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  },
  "sideEffects": false,
  "files": [
    "src",
    "dist",
    "help.md"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
